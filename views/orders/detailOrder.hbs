
	
	<div class="wrapper pt--30 pb--30 " id="wrapper">
        <!-- Start Checkout Area -->
      
        <section class="wn__checkout__area section-padding--lg bg__white">
        	<div class="container">
        		<div class="row d-flex">
        			<div class="col-lg-6 col-12">
        				<div class="customer_details product-thumbnail">
        					<h3>Địa chỉ nhận hàng</h3>
        					<div class="customar__field">
        						<div class="margin_between">
	        						<div class="input_box space_between">
	        							<label>Họ tên: {{order.firstName}}  {{order.lastName}} </label>
	        						</div>
                                    <div class="input_box space_between">
										<label>Số điện thoại: {{order.phone}}</label>									
									</div>
        						</div>

								<div>
                                    <label>Địa chỉ: {{address}}</label>
                                </div>
								<div>
									<a class="btn border button" href="/users/order" role="button"><i class="fas fa-angle-double-left"></i> Trở lại</a> 
								</div>
        					</div>
        				
        				</div>
        			</div>
        			<div class="col-lg-6 col-12 md-mt-40 sm-mt-40">
        				<div class="wn__order__box">
        					<h3 class="onder__title">Chi tiết đơn hàng</h3>
        					<ul class="order__total">
        						<li>Sản phẩm</li>
        						<li>Thành tiền</li>
        					</ul>
        					<ul class="order_product">
                                {{#each order.cart.items}}
        						<li>{{item.title}} x {{qty}}
                                      <span>{{price}} vnđ</span>
                                </li>
                              
                                   
                                {{/each}}
        					</ul>
        					<ul class="shipping__method">
        						<li>Tổng số tiền<span>{{order.cart.totalPrice}} vnđ</span></li>
        						<li>Phí vận chuyển<span>30000 vnđ</span> </li>
                                <li><p>Phương thức thanh toán:</p>Thanh toán khi nhận hàng</li>
        					</ul>
        					<ul class="total__amount">
        						<li>Tổng thanh toán <span>{{order.totalOrder}} vnđ</span></li>
        					</ul>
                           
        				</div>
                       
        			</div>         
                
				</div>
                      
        	</div>
        </section>
	</div>
	<!-- //Main wrapper -->