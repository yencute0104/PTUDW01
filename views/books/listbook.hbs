
<!-- End Bradcaump area -->
<!-- Start Shop Page -->
<div class="page-shop-sidebar left--sidebar bg--white section-padding--lg">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-12 order-2 order-lg-1 md-mt-40 sm-mt-40">
                <div class="shop__sidebar">
                    <aside class="wedget__categories poroduct--cat">
                        <h3 class="wedget__title">Danh mục sản phẩm</h3>
                        <ul>
                            {{#each category}}
                                <li><a href="/listbook?catid={{_id}}" name="cat" >{{catogory}}</a></li>
                            {{/each}}
                        </ul>
                    </aside>
                    <aside class="wedget__categories pro--range">
                        <h3 class="wedget__title">Lọc theo giá sản phẩm</h3>
                        <div class="content-shopby">
                            <div class="price_filter s-filter clear">
                                <form action="#" method="GET">
                                    <div id="slider-range"></div>
                                    <div class="slider__range--output">
                                        <div class="price__output--wrap">
                                            <div class="price--output">
                                                <span>Giá :</span><input type="text" id="amount" readonly="">
                                            </div>
                                            <div class="price--filter">
                                                <a href="#">Lọc</a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </aside>
                    <aside class="wedget__categories poroduct--tag">
                        <h3 class="wedget__title">Thẻ</h3>
                        <ul>
                            {{#each category}}
                                <li><a href="?catid={{_id}}&search={{nameSearch}}">{{catogory}}</a></li>
                            {{/each}}
                        </ul>
                    </aside>
                    <aside class="wedget__categories sidebar--banner">
                        <img src="https://www.pinterest.com/pin/547820742177463406/" alt="banner images">
                        <div class="text">
                            <h2>Sản phẩm mới</h2>
                            <h6>Tiết kiệm tới <br> <strong>40%</strong></h6>
                        </div>
                    </aside>
                </div>
            </div>
            <div class="col-lg-9 col-12 order-1 order-lg-2">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="shop__list__wrapper d-flex flex-wrap flex-md-nowrap justify-content-between">
                            <div class="shop__list nav justify-content-center" role="tablist">
                                <a class="nav-item nav-link active" data-toggle="tab" href="#nav-grid" role="tab"><i class="fa fa-th"></i></a>
                                <a class="nav-item nav-link" data-toggle="tab" href="#nav-list" role="tab"><i class="fa fa-list"></i></a>
                            </div>
                            <p>Số lượng: {{totalBooks}} sản phẩm </p>
                            <div class="orderby__wrapper">
                                <span>Sắp xếp</span>
                                <select class="shot__byselect">
                                    <option>Mới nhất</option>
                                    <option>Bán chạy</option>
                                    <option>Nổi bật</option>
                                    <option>Jewellery</option>
                                    <option>Giá bán</option>
                                   
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab__container">
                    <div class="shop-grid tab-pane fade show active" id="nav-grid" role="tabpanel">
                        <div class="row">
                            <!-- Start Single Product -->
                            {{#each books}}
                            <div class="product product__style--3 col-lg-4 col-md-4 col-sm-6 col-12">
                                <div class="product__thumb">
                                    <a class="first__img" href="/listbook/{{_id}}"><img src="{{cover}}" alt="product image"></a>
                                 
                                    <div class="hot__box">
                                        <span class="hot-label">{{status}}</span>
                                    </div>
                                </div>
                                <div class="product__content content--center">
                                    <h4><a href="/listbook/{{_id}}">{{title}}</a></h4>
                                    <ul class="prize d-flex">
                                        <li>{{basePrice}}</li>
                                        <li class="old_prize">{{oldPrice}}</li>
                                    </ul>
                                  
                                </div>
                            </div>
                            {{/each}}
                            <!-- End Single Product -->
                        </div>
                {{#gt totalBooks 0}}
                <nav aria-label="Page navigation example" style="..."> 
                  <ul class="wn__pagination">
                    {{#isnt currentPage 1}}
                    <li>
                        <a href="/listbook?page={{prevPage}}&catid={{catID}}&search={{nameSearch}}">
                          <span aria-hidden="true" class="zmdi zmdi-chevron-left"></span>
                        </a>
                    </li>
                    {{/isnt}}

                    {{#if hasPreviousPage}}
                    <li>
                        <a href="/listbook?{{prePageQueryString}}">
                          {{prevPage}}
                        </a>
                    </li>
                    {{/if}}

                    
                  
                    <li class="active">
                        <a href="javascript:void(0)" tabindex="-1">
                          {{currentPage}}
                        </a>
                    </li>

                    {{#if hasNextPage}}
                    <li>
                        <a  href="/listbook?{{nextPageQueryString}}">
                          {{nextPage}}
                        </a>
                    </li>
                    {{/if}}

                    {{#gt lastPage currentPage}}
                    <li>
                        <a href="/listbook?page={{nextPage}}&catid={{catID}}&search={{nameSearch}}" >
                          <span aria-hidden="true" class="zmdi zmdi-chevron-right"></span>
                        </a>
                    </li>
                    {{/gt}}
                  </ul>
                  </nav>
                {{/gt}}       
                    </div>
                    <div class="shop-grid tab-pane fade" id="nav-list" role="tabpanel">
                        <div class="list__view__wrapper">
                            <!-- Start Single Product -->
                            {{#each books}}
                            <div class="list__view">
                                <div class="thumb">
                                    <a  href="/listbook/{{_id}}"><img class="size__cover" src="{{cover}}" alt="product images"></a>
                                </div>
                                <div class="content">
                                    <h2><a href="/listbook/{{_id}}">{{title}}</a></h2>
                                   
                                    <ul class="prize__box">
                                        <li>{{basePrice}}</li>
                                        <li class="old__prize">{{oldPrice}}</li>
                                    </ul>
                                    <p>{{descript}}</p>
                                    <ul class="cart__action d-flex">
                                        <li class="cart"><a href="cart.html">Thêm vào giỏ hàng</a></li>
                                        <li class="wishlist"><a href="cart.html"></a></li>
                                        <li class="compare"><a href="cart.html"></a></li>
                                    </ul>

                                </div>
                            </div>
                            {{/each}}
                            <!-- End Single Product -->
                          
                        </div>
                    </div>

                    
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Shop Page -->
